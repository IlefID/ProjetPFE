<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Ombre portée (dernier élément = en dessous) -->
    <item
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <!-- Couleur et opacité de l'ombre -->
            <solid android:color="#40000000" /> <!-- Noir à 25% d'opacité -->
            <!-- Coins arrondis (même rayon que l'EditText) -->
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- EditText (par-dessus l'ombre) -->
    <item>
        <shape android:shape="rectangle">
            <!-- Fond semi-transparent -->
            <solid android:color="#FFFFFF" /> <!-- Blanc à 50% d'opacité -->
            <!-- Bordure -->
            <stroke
                android:width="1dp"
                android:color="#80000000" /> <!-- Noir à 50% -->
            <!-- Coins arrondis -->
            <corners android:radius="8dp" />
            <!-- Padding pour le texte -->
            <padding
                android:bottom="8dp"
                android:left="12dp"
                android:right="12dp"
                android:top="8dp" />
        </shape>
    </item>
</layer-list>